@model IEnumerable<DOANCUOIKYLTW.Models.SANPHAM>

@{
    ViewBag.Title = "showProduct";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>showProduct</h2>

<div class="container" style="display:flex; flex-wrap:wrap; gap: 10px">

@foreach (var item in Model)
{
    <div class="card" style="width: calc(100% / 3 - 30px)">
        <img class="card-img-top" src="~/HinhSanPham/HinhSanPham/SanPham/@item.ANHDAIDIEN" alt="@item.TENSP" />
        <div class="card-body">
            <p class="card-text" style="overflow: hidden; max-height: 50px; text-align: center;">@item.TENSP</p>
            <div style="display: flex; justify-content: space-between;">
                <p class="card-text" style="overflow: hidden; max-height: 50px;">@item.GIABAN</p>
                <p class="card-text" style="overflow: hidden; max-height: 50px;">@item.TONGDANHGIA</p>
                
            </div>
            @Html.ActionLink("Thong tin chi tiet", "DetailSanPham", new { id = item.MASP }, new { @class = "alert-link" })
        </div>
    </div>


}
